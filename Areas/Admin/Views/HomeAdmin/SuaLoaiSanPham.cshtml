@model se310_th.Models.LoaiSanPham
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>Sửa loại sản phẩm</title>
</head>
<body>
<div>
    <p><a asp-area="Admin" asp-controller="HomeAdmin" asp-action="DanhMucLoaiSanPham">Quay về danh mục loại sản phẩm</a></p>
    <form method="post" asp-action="SuaLoaiSanPham">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="MaLoai">Mã loại sản phẩm</label>
            <input asp-for="MaLoai"/>
            <span asp-validation-for="MaLoai"></span>
        </div>

        <div class="form-group">
            <label asp-for="TenLoai">Tên loại sản phẩm</label>
            <input asp-for="TenLoai"/>
            <span asp-validation-for="TenLoai"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Tạo</button>
        </div>
    </form>
</div>
</body>
</html>