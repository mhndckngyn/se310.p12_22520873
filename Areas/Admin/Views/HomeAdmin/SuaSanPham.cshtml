@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model se310_th.Models.SanPham

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>Sửa sản phẩm</title>
</head>
<body>
<p><a asp-area="Admin" asp-controller="HomeAdmin" asp-action="SuaSanPham">Quay về danh mục sản phẩm</a></p>
<div>
    <form method="post" asp-action="SuaSanPham">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="MaSanPham">Mã sản phẩm</label>
            <input asp-for="MaSanPham"/>
            <span asp-validation-for="MaSanPham"></span>
        </div>

        <div class="form-group">
            <label asp-for="TenSanPham">Tên sản phẩm</label>
            <input asp-for="TenSanPham"/>
            <span asp-validation-for="TenSanPham"></span>
        </div>

        <div class="form-group">
            <label asp-for="Gia">Giá</label>
            <input asp-for="Gia"/>
            <span asp-validation-for="Gia"></span>
        </div>

        <div class="form-group">
            <label asp-for="SoLuong">Số lượng</label>
            <input asp-for="SoLuong"/>
            <span asp-validation-for="SoLuong"></span>
        </div>

        <div class="form-group">
            <label asp-for="MaLoai">Mã loại</label>
            <select asp-for="MaLoai" asp-items="ViewBag.LoaiSp"></select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Tạo</button>
        </div>
    </form>
</div>
</body>
</html>